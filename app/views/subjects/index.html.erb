<h3>
  <div class="text-center">
    Subjects
    <div class="badge badge-info">
      <%= @subjects.count %>
    </div>
    <%= link_to "New subject", new_subject_path, class: 'btn btn-primary' %>
  </div>
</h3>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm table-secondary shadow">
    <thead>
      <tr>
        <th>Id</th>
    	  
        <th>Name</th>
        
        <th>Duration</th>
        
        <th>Price</th>

        <th>Teacher Price</th>

        <th>Courses</th>
        
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each do |subject| %>
        <%= content_tag :tr, id: dom_id(subject), class: dom_class(subject) do %>
          <td><%= link_to subject.id, subject %></td>
          
            <td><%= subject.name %></td>
          
            <td><%= subject.duration %></td>
          
            <td><%= subject.client_price_cents %></td>

            <td><%= subject.teacher_price_cents %></td>

            <td><%= subject.courses.count %></td>
          
          <td>
            <%= link_to 'Edit', edit_subject_path(subject), class: 'btn btn-sm btn-warning' %>
            <%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
