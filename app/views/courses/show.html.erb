 <div class="text-center">
    <%= link_to "New course", new_course_path, class: 'btn btn-primary' %>
  </div>
  <br/>
<div class="card shadow">
  <div class="card-header">
    <h4>
      Course  <%= @course.id %>
    </h4>
  </div>
  <div class="card-body">
  
    <b>User:</b>
    <%= @course.user %>
    <br>
  
    <b>Classroom:</b>
    <%= @course.classroom %>
    <br>
  
    <b>Subject:</b>
    <%= @course.subject %>
    <br>

    <b>Start Time:</b>
    <%= @course.start_time&.strftime("%I:%M %p") %>
    <br>

    <b>Days:</b>
    <%= @course.active_days.join(", ") %>
    <br>
  
  </div>
  <div class="card-footer">
    <%= link_to 'Back', courses_path %> |
    <%= link_to 'Edit', edit_course_path(@course), class: 'btn btn-sm btn-warning' %> |
    <%= link_to 'Destroy', @course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
  </div>
</div>
<br/>

<div class="card shadow">
  <div class="card-header">
    <h4> Enrollment</h4>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover table-sm table-light shadow">
        <thead >
          <tr>
            <th>Id</th>
            <th>User</th>
          </tr>
        </thead>
        <tbody>
          <% @enrollments.each do |enrollment| %>
            <%= content_tag :tr, id: dom_id(enrollment), class: dom_class(enrollment) do %>
                <td><%= enrollment.id %></td>
                <td><%= enrollment.user %></td>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<br/>

<%= link_to "New Lesson", new_course_lesson_path(@course), class: "btn btn-primary" %>
<p/>
<%= render 'static_pages/calendar' %>
