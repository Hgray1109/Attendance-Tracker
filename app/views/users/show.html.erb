<div class='card shadow'>
    <div class="card-body">
        <b>Id:</b>
        <%= @user.id %><br/>
        <b>Email:</b>
        <%= @user.email %><br />
        <b>Confirmation:</b>
        <%= boolean_label(@user.confirmed?) %>
        <br/>
        <b>Created by Invitation:</b>
        <%= boolean_label(@user.created_by_invite?) %>
        <br/>
        <b><%= "sign_in_count".humanize %>: </b>
        <%= @user.sign_in_count %>
        <br/>
        <b><%= "current_sign_in".humanize %>: </b>
        <%= @user.current_sign_in_at&.strftime("%b/%d/%y - %I:%M %p") %>
        <br/>
        <b><%= "last_sign_in".humanize %>: </b>
        <%= @user.last_sign_in_at&.strftime("%b/%d/%y - %I:%M %p") %>
        <br/>
        <b><%= "current_sign_in_ip".humanize %>: </b>
        <%= @user.current_sign_in_ip %>
        <br/>
        <b><%= "last_sign_in_ip".humanize %>: </b>
        <%= @user.last_sign_in_ip %>
        <br/>
        <b><%= "locked_at".humanize %>: </b>
        <%= @user.locked_at %>
        <br/>
        <b><%= "provider".humanize %>: </b>
        <%= @user.provider %>
        <br/>
        <b><%= "uid".humanize %>: </b>
        <%= @user.uid %>
        <br/>
        <b><%= "name".humanize %>: </b>
        <%= @user.name %>
        <br/>
        <b><%= "image".humanize %>: </b>
        <% if @user.image.present? %>
        <%= image_tag @user.image, size: "50x50" %>
        <% end %>
        <br/>
        <b><%= "Invited by".humanize %>: </b>
        <% if @user.invited_by %>
            <%= @user.invited_by %>
            <% else %>
            none
        <% end %>
        <br/>
        <b><%= "roles".humanize %>: </b>
        <%= @user.active_roles.join(", ") %>
        <br/>
        
            <%= link_to "Edit", edit_user_path(@user), class: "btn btn-sm btn-secondary" %>
            <%= link_to ban_status(@user), ban_user_path(@user), method: :patch, class: "btn btn-sm btn-warning" %>
            <%= link_to "Delete", @user, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-danger" %>
        
    </div>


        <br/>
    <div class="card-footer">
        <b><%= "Attendances_Count".humanize %>: </b>
        <%= @user.attendances.count %>
        <br/>
        <b><%= "Total Student Cost".humanize %>: </b>
        <span> $<%= @user.student_total_cents %></span>
        <br/>
        <b><%= "Lessons_count".humanize %>: </b>
        <%= @user.lessons.count %>
        <br/>
        <b><%= "Total Teacher Earnings".humanize %>: </b>
        <span> $<%= @user.teacher_price_total_cents %></span>
        <br/>
        <b><%= "Balance".humanize %>: </b>
        <span> $<%= @user.balance_cents %></span>
    </div>
    <div class="card-footer">
        <%= link_to "All Users", users_path, class: "btn btn-sm btn-secondary" %>
    </div>
</div>
